# extended .bashrc file
# this should be sourced from .bashrc

# Automatically cd into directories by executing their name
shopt -s autocd

#######################
# Aliases
#######################
# lsd due to objectively support for Windows
if [ -x "$(command -v lsd)" ]; then
    alias ls='lsd'
    alias l='lsd --icons=never'
fi

# ls aliases
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lA='ls -A'
alias llA='ls -lA'

# cp aliases
alias rcp='cp -r'
alias acp='cp -a'

# rm aliases
alias irm='rm -i'
alias rrm='rm -r'
alias rf='rm -rf'

# mkdir aliases
alias md='mkdir'
alias mdp='mkdir -p'

# misc
if [ -x "$(command -v bat)" ]; then
    alias cat='bat'
elif [ -x "$(command -v batcat)" ]; then
    alias cat='batcat'
fi

[ -x "$(command -v nvim)" ] && alias vi='nvim'

# environment variables
export EDITOR=nvim

# initialize starship prompt if installed
[ -f ~/.config/starship.toml ] && command -v starship >/dev/null 2>&1 && eval "$(starship init bash)"
